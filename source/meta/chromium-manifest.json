{
	"manifest_version": 2,
	"name": "<%= name %>",
	"version": "<%= version %>",
	"description": "__MSG_appDesc__",
	"homepage_url": "<%= homepage %>",
	"author": "<%= author.name %>",
	"default_locale": "en",
	"content_scripts": [{
		"js": [
			"jquery-2.1.0.min.js",
			"inject.js"
		],
		"run_at": "document_start",
		"matches": [ "http://vk.com/*", "https://vk.com/*" ],
		"exclude_globs": [
			"*/notifier.php*",
			"*/*_frame.php*"
		],
		"all_frames": true
	}],
	"web_accessible_resources": [
		"scripts/*"
	],
	"permissions": [ "http://*/*" ]
}

{
	"manifest_version": 2,
	"name": "<%= name %>",
	"version": "<%= version %>",
	"description": "__MSG_appDesc__",
	"homepage_url": "<%= homepage %>",
	"author": "<%= author.name %>",
	"default_locale": "en",
	"content_scripts": [{
		"js": [ "helpers.js", "inject.js" ],
		"run_at": "document_start",
		"all_frames": true,
		"matches": [ "*://vk.com/*", "*://*.vk.com/*" ]
	}],
	"web_accessible_resources": [
		"run-in-top.js",
		"run-in-frames.js"
	],
	"permissions": [ "http://*/*" ]
}

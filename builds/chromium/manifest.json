{
	"manifest_version": 2,
	"name": "happy",
	"version": "0.1.0",
	"description": "__MSG_appDesc__",
	"homepage_url": "https://github.com/deltaidea/happy",
	"author": "Nikita Litvin",
	"default_locale": "ru",
	"content_scripts": [{
		"js": [
			"jquery-2.1.0.min.js",
			"inject.js"
		],
		"run_at": "document_start",
		"matches": [ "http://vk.com/*", "https://vk.com/*" ],
		"exclude_globs": [
			"*/notifier.php*",
			"*/*_frame.php*"
		],
		"all_frames": true
	}],
	"web_accessible_resources": [
		"scripts/*"
	],
	"icons": {
		"32":"img/icon32.png",
		"48": "img/icon48.png",
		"128": "img/icon128.png"
	},
	"permissions": [ "http://*/*" ]
}
